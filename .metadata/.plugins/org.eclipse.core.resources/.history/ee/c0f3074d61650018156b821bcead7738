package com.ashutosh.shoppingcart.controller;

import java.util.List;

import javax.servlet.http.HttpSession;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;

import com.ashutosh.shoppingcart.dao.CartDAO;
import com.ashutosh.shoppingcart.dao.ProductDAO;
import com.ashutosh.shoppingcart.domain.Cart;
import com.ashutosh.shoppingcart.domain.Product;

@Controller
public class CartController 
{
	@Autowired
	CartDAO cartDAO;
	
	@Autowired
	ProductDAO productDAO;
	
	@RequestMapping(value="/showCart")
	public String showCart(Model m,HttpSession session)
	{
		String username=(String)session.getAttribute("username");
		List<Cart> list=cartDAO.list(username);
		
		m.addAttribute("list", list);
		m.addAttribute("totalCost", this.calculateTotalCost(list));
		session.setAttribute("Carts",list.size());
		
		return "Cart";
	}
	
	@RequestMapping(value="/addToCart/{productId}")
	public String addToCart(@PathVariable("productId") String productId,@RequestParam("quantity")int quantity,HttpSession session,Model m)
	{
		
		Cart Cart=new Cart();
		Product product=productDAO.getProduct(productId);
		String username=(String)session.getAttribute("username");
		
		Cart.setProductId(productId);
		Cart.setProductName(product.getProductName());
		Cart.setQuantity(quantity);
		Cart.setPrice(product.getPrice());
		Cart.setStatus("NP");
		Cart.setUsername(username);
		
		cartDAO.addToCart(Cart);
		
		List<Cart> list=cartDAO.list(username);
		
		m.addAttribute("list", list);
		m.addAttribute("totalCost", this.calculateTotalCost(list));
		session.setAttribute("Carts",list.size());
		
		return "Cart";
	}
	
	@RequestMapping(value="/deleteCart/{CartId}")
	public String deleteCart(@PathVariable("CartId")int CartId,Model m,HttpSession session)
	{
		
		Cart Cart=cartDAO.getCart(CartId);
		cartDAO.deleteFromCart(Cart);
		
		String username=(String)session.getAttribute("username");
		List<Cart> list=cartDAO.list(username);
		
		m.addAttribute("list", list);
		m.addAttribute("totalCost", this.calculateTotalCost(list));
		session.setAttribute("Carts",list.size());
		
		return "Cart";
	}
	
	@RequestMapping(value="/updateCart/{CartId}")
	public String updateCart(@PathVariable("CartId") int CartId,@RequestParam("qty") int quantity,Model m,HttpSession session)
	{

		Cart Cart=cartDAO.getCart(CartId);
		Cart.setQuantity(quantity);
		cartDAO.updateCart(Cart);
		
		String username=(String)session.getAttribute("username");
		List<Cart> list=cartDAO.list(username);
		
		m.addAttribute("list", list);
		m.addAttribute("totalCost", this.calculateTotalCost(list));
		session.setAttribute("Carts",list.size());
		
		return "Cart";
		
	}
	public int calculateTotalCost(List<Cart> Carts)
	{
		int totalCost=0;
		int count=0;
		
		while(count<Carts.size())
		{
			totalCost=totalCost+(Carts.get(count).getPrice()*Carts.get(count).getQuantity());
			count++;
		}
		
		return totalCost;
	}
}
